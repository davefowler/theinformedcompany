{{> header }}
<div class="container">
  <div class="row">
    <div class="eight columns offset-by-two">
      <article>
        <section>
          <h1>{{{ page.title }}}</h1>
        </section>
        <section>
          {{{ contents }}}

          <a name="blog"></a>
          <h2>Blog</h2>

          {{#each collections.posts }}
          <div class="row smallthing">
              <a href="/{{ this.path }}/"><h4>{{ this.title }}</h4></a>
          </div>
          {{/each }}

        </section>
      </article>
    </div>
  </div>
</div>
{{>footer}}
